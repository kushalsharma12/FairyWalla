<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateFragment">

    <TextView
        android:id="@+id/rating_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="FairyWalla's Profile"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintLeft_toRightOf="@+id/back_btn_rate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/back_btn_rate"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/background_color"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/background_color"
        app:strokeWidth="0dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back_btn" />


    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rate_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:clickable="true"
        android:elevation="64dp"
        android:focusable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rate_profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:layout_constraintLeft_toLeftOf="@+id/rate_profile_image"
                app:layout_constraintRight_toRightOf="@+id/rate_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/rate_profile_image">

                <ImageView
                    android:id="@+id/rate_star_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_star_rate_24" />

                <TextView
                    android:id="@+id/rate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:text="4.6"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/rate_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="1"
                android:text="Kushal Sharma"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/rate_profile_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rate_profile_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:text="uie19bme1081@gmail.com"
                android:textColor="#777777"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/rate_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/rate_profile_name" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rate_materialCardView"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:background="#C4C4C4"
                android:backgroundTint="#C4C4C4"
                app:cardCornerRadius="10dp"
                app:layout_constraintLeft_toRightOf="@+id/rate_profile_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rate_profile_email" />

            <TextView
                android:id="@+id/rate_profile_phNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:hint=" +91-6374206890"
                android:maxLines="1"
                android:textColor="#777777"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@id/rate_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/rate_materialCardView"

                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rate_materialCardViewTwo"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:background="#C4C4C4"
                android:backgroundTint="#C4C4C4"
                app:cardCornerRadius="10dp"
                app:layout_constraintLeft_toRightOf="@+id/rate_profile_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rate_profile_phNo" />


            <TextView
                android:id="@+id/rate_tv_permanentAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Permanent Address :"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/rate_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/rate_materialCardViewTwo" />

            <TextView
                android:id="@+id/et_rate_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="No 15 uti street off ovie palace road effurun delta state"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/rate_profile_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rate_tv_permanentAddress" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


    <com.willy.ratingbar.ScaleRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate_cardView"
        app:srb_clickable="true"
        app:srb_minimumStars="1"
        app:srb_scrollable="true"
        tools:layout_editor_absoluteY="383dp" />

    <TextView
        android:id="@+id/userRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"
        android:text="00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <Button
        android:id="@+id/rateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/green_color"
        android:text="Rate My Work"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userRating" />


</androidx.constraintlayout.widget.ConstraintLayout>