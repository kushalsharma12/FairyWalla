<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exploreItem_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="12dp"
    android:elevation="64dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/exploreItem_profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="@+id/exploreItem_profile_image"
            app:layout_constraintRight_toRightOf="@+id/exploreItem_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/exploreItem_profile_image">

            <ImageView
                android:id="@+id/exploreItem_star_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_star_rate_24" />

            <TextView
                android:id="@+id/exploreItem_rating_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:text="4.6"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/exploreItem_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:text="Hanna Thapa"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/exploreItem_profile_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exploreItem_profile_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:text="Doma@gmail.com"
            android:textColor="#777777"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/exploreItem_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/exploreItem_profile_name" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exploreItem_materialCardView"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:background="#C4C4C4"
            android:backgroundTint="#C4C4C4"
            app:cardCornerRadius="10dp"
            app:layout_constraintLeft_toRightOf="@+id/exploreItem_profile_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exploreItem_profile_email" />

        <TextView
            android:id="@+id/exploreItem_profile_phNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:hint=" +23695524"
            android:maxLines="1"
            android:textColor="#777777"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/exploreItem_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/exploreItem_materialCardView"

            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exploreItem_materialCardViewTwo"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:background="#C4C4C4"
            android:backgroundTint="#C4C4C4"
            app:cardCornerRadius="10dp"
            app:layout_constraintLeft_toRightOf="@+id/exploreItem_profile_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exploreItem_profile_phNo" />


        <TextView
            android:id="@+id/exploreItem_tv_permanentAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Permanent Address :"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/exploreItem_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/exploreItem_materialCardViewTwo" />

        <TextView
            android:id="@+id/et_exploreItem_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="No 15 uti street off ovie palace road effurun delta state"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/exploreItem_profile_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exploreItem_tv_permanentAddress" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>


